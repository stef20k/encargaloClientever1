<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Crea tu cuenta"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Debe incluir número, mayúscula y minúscula"
        android:textSize="10sp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:id="@+id/contenido_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*Usuario" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editex_forma_cuadrada"
            android:drawablePadding="7dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="*Contraseña" />

        <EditText
            android:id="@+id/edtContraseña"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editex_forma_cuadrada"
            android:drawableLeft="@drawable/ic_lock"
            android:ems="10"
            android:drawablePadding="7dp"
            android:inputType="textPassword"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contenido_edit_text"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/bntCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:textColor="@color/rojo"
            android:text="CANCELAR" />

        <Button
            android:id="@+id/btnAcep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:layout_marginLeft="20dp"
            android:textColor="@color/azul_100"
            android:text="ACEPTAR"/>
    </LinearLayout>


</RelativeLayout>