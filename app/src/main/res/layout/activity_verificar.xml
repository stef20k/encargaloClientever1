<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f9fc"
    android:fitsSystemWindows="true"
    tools:context=".VerificarActivity">


    <include
        android:id="@+id/include_toolbar"
        layout="@layout/custum_toolbar_personalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_toolbar"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa el codigo  de verficacion "
            android:textSize="28dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se te ha enviado un mensaje de texto con el codigo "
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/editex_verificar"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:maxLength="1"
                android:layout_marginHorizontal="3dp"
                android:textAlignment="center"
                android:textColor="@color/azul_100"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/editex_verificar"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:maxLength="1"
                android:layout_marginHorizontal="3dp"
                android:textAlignment="center"
                android:textColor="@color/azul_100"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/editex_verificar"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:maxLength="1"
                android:layout_marginHorizontal="3dp"
                android:textAlignment="center"
                android:textColor="@color/azul_100"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/editex_verificar"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:maxLength="1"
                android:layout_marginHorizontal="3dp"
                android:textAlignment="center"
                android:textColor="@color/azul_100"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/editex_verificar"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:maxLength="1"
                android:layout_marginHorizontal="3dp"
                android:textAlignment="center"
                android:textColor="@color/azul_100"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/editex_verificar"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:maxLength="1"
                android:layout_marginHorizontal="3dp"
                android:textAlignment="center"
                android:textColor="@color/azul_100"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_gravity="center_horizontal" />




        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="25dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_base_bg_azul_100_underline"
            android:text="Reenviar codigo"
            android:textColor="#000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ShowDialog"
            android:text="Continuar"
            android:textSize="15dp"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/btn_base_bg_azul_100"/>
    </LinearLayout>
</RelativeLayout>